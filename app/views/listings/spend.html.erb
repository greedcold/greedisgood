<h1>Spend Listings</h1>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>

<table class="table table-striped table-bordered">
    <tr>
      <th class="center">Date</th>
      <th class="center">event</th>
      <th class="center">Price</th>
      <th class="center">Action</th>
    </tr>


    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.date %></td>
        <td><%= listing.event %></td>
        <td><%= listing.price %></td>
      <td>
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", listing, class: "btn btn-link" %></li>

          <% if can? :update, @listing %>
            <td><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %></td>
          <% end %>

          <% if can? :destroy, @listing %>
            <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
          <% end %>

          </ul>
        </div>
      </td>
		</tr>
  <% end %>
</table>
